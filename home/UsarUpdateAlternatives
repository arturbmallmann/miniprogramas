sudo update-alternatives --install /usr/local/bin/top top /usr/bin/top 10
sudo update-alternatives --install /usr/local/bin/top top /usr/bin/vtop 10
sudo update-alternatives --install /usr/local/bin/top top /usr/bin/hop 10

